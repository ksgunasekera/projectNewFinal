      <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</h1>
          </div>         
        </div>
      </div>
      </header>
    
      <section id="breadcrumb">
        <div class="container">
          <div class="row">
            <div class="col-md">
              <ol class="breadcrumb">
                <li class="active">Dashboard</li>
              </ol>
            </div>
          </div>
        </div>
      </section>

      <section id="main">
        <div class="container">
          <div class="row">
            <div class="col-md-3">
              <div class="list-group">
                <a href="" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
                <a href="/receptionist" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Register</a>
                <a href="/receptionist/admission" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Admission</a>
              </div>
            </div>
            <div class="col-md-9">
              <div class="panel panel-default">
                <div class="panel-heading main main-color-bg">
                  <h3 class="panel-title">Patient Registration </h3>
                </div>
              </div>
              <div class="panel-body">
                <div class="col-md-10">
                  <div class="well dash-box">

                   <section id="main">
                      <div class="container">
                        <div class="row">
                          <div class="col-md-6 offset-md-4">
                            <form class="form-horizontal" method="post" action="/receptionist/regPatient">
                              <div class="form-group">
                                <label for="inputFname" class="control-label col-md-3">First Name</label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" id="inputFname" placeholder="First Name" name="firstName">
                                </div>
                                  <%if(firstNameError){%>
                                    <div class="alert alert-danger">
                                      <h5>First Name Required</h5>
                                    </div>
                                  <%}%>
                                </div>

                              <div class="form-group">
                                <label for="inputLname" class="control-label col-md-3">Last Name</label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" id="inputLname" placeholder="Last Name" name="lastName">
                                </div>
                                  <%if(lastNameError){%>
                                    <div class="alert alert-danger">
                                        <h5>Last Name Required</h5>
                                    </div>
                                  <%}%>
                                </div>

                              <div class="form-group">
                                <label for="inputRNo" class="control-label col-md-3">Registration No</label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" id="inputRNo" placeholder="Registration No" name="reg_no">
                                </div>
                                  <%if(regNoError){%>
                                    <div class="alert alert-danger">
                                        <h5>Registration Number Required</h5>
                                    </div>
                                    <%}%>
                              </div>

                                <div class="form-group">
                                  <label for="inputType" class="control-label col-md-3">Patient Type</label>
                                  <div class="col-md-9">
                                    <select class="form-control" id="inputType" name="type">
                                        <option>Weekly</option>
                                        <option>Monthly</option>
                                        <option>Annual</option>
                                    </select>
                                  </div>
                              </div>

                                <div class="form-group">
                                  <label for="inputAge" class="control-label col-md-3">Age</label>
                                  <div class="col-md-9">
                                    <input type="text" class="form-control" id="inputAge" placeholder="Age" name="age">
                                  </div>
                                    <%if(ageError){%>
                                      <div class="alert alert-danger">
                                        <h5>Age Required</h5>
                                      </div>
                                    <%}%>
                                </div>  

                                <div class="form-group">
                                  <label for="inputGender" class="control-label col-md-3">Gender</label>
                                  <div class="col-md-9">
                                    <select class="form-control" id="inputGender" name="gender">
                                      <option>Male</option>
                                      <option>Female</option>
                                    </select>
                                  </div>
                                </div>

                                <div class="form-group">
                                  <label for="inputAddress" class="control-label col-md-3">Address</label>
                                  <div class="col-md-9">
                                    <input type="text" class="form-control" id="inputAddress" placeholder="Address" name="address">
                                  </div>
                                    <%if(addressError){%>
                                      <div class="alert alert-danger">
                                        <h5>Address Required</h5>
                                      </div>
                                    <%}%>
                                </div>

                                <div class="form-group">
                                  <label for="inputCNo" class="control-label col-md-3">Contct Number</label>
                                  <div class="col-md-9">
                                    <input type="text" class="form-control" id="inputCNo" placeholder="Contact No" name="tel_no">
                                  </div>
                                    <%if(contactNoError){%>
                                      <div class="alert alert-danger">
                                        <h5>Contact No Required</h5>
                                      </div>
                                    <%}%>
                                </div>
                                <center>
                                  <button type="submit" class="btn btn-primary">Submit</button>
                                  <button type="reset" class="btn btn-primary">Cancel</button>
                                </center>
                            </form>
                          </div>
                        </div>
                      </div>
                    </section>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

