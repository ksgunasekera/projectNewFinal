    <title>Diabitic Clinic | Receptionist Panel</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/adminStyle.css">
    <script src="https://cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
  </head>

  <body>
      <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand">Diabetic Clinic</a>
          <a class="navbar-brand">Receptionist</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class=""><a href="/">Dashboard</a></li>
            <li class=""><a href="/receptionist">Register</a></li>
            <li class="active"><a href="/receptionist/admission">Admission</a></li> 
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="">Welcome</a></li>
            <li><a href="/">Logout</a></li>
            <li>
          </ul> 
        </div><!--/.nav-collapse -->
      </div>
      </nav>

      <header id="header">
      <div class="container">
        <div class="row">
          <div class="col-md-11">
            <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</h1>            
          </div>         
        </div>
      </div>      
    </header>
    
    <section id="breadcrumb">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <ol class="breadcrumb">
              <li class="active">Dashboard</li>
            </ol>
          </div>         
        </div>       
      </div>
    </section>

    <section id="main">
      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <div class="list-group">
              <a href="" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard</a>
              <a href="/receptionist" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Register</a>
              <a href="/receptionist/admission" class="list-group-item"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Admission</a>
              <hr>

            </div>
            </div>

            <div class="col-md-9">
              <div class="panel panel-default">
                <div class="panel-heading main main-color-bg">
                  <h3 class="panel-title">Patient Admission </h3>
                </div>
              </div>
              <div class="panel-body">
                <div class="col-md-10">
                  <div class="well dash-box">

                    <section id="main">
                      <div class="container">
                        <div class="row">
                          <div class="col-md-6 offset-md-4">

                            <form class="form-horizontal" method="post" action="/receptionist/admission/admPatient">
                              <div class="form-group">
                                <label for="inputRNo" class="control-label col-md-3">Registration No</label>
                                <div class="col-md-9">
                                  <input type="text" class="form-control" id="inputRNo" placeholder="Registration No" name="reg_no">
                                </div>
                                  <%if(regNoError){%>
                                <div class="alert alert-danger">
                                  <h5>Enter Registration No</h5>
                                </div>
                                  <%}%>
                              </div>
                              <center>
                                <button type="submit" class="btn btn-primary">Add</button>
                                <button type="reset" class="btn btn-primary">Cancel</button>
                              </center>
                              <hr>

                              <table class="table table-hover">
                              <tr> 
                                <th class="text-center">Patient admission order</th>
                              </tr>
                              <% for(var patientadmdata of admission) { %>          
                              <tr>
                                <td><%=patientadmdata.reg_no %></td>
                              </tr>
                              <% }%>
                              </table>
                            </form>
                          </div>
                        </div>
                      </div>
                    </section>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
   
      <footer id="footer">
        <p>Copyright &copy</p>
        
      </footer>
      <!--ckeditor-->
      <script>
        CKEDITOR.replace( 'pagebody' );
      </script>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
      
  </body>
  </html>
